{
    "compilerOptions": {
        "target": "ES2021",
        "module": "CommonJS",
        "strict": true,
        "useUnknownInCatchVariables": false,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "esModuleInterop": true,
    },
    "include": ["**/*.ts"]
}